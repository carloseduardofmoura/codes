from pydub import AudioSegment
import os
os.system("clear")

print("> Para correta conversão, o arquivo a ser convertido deve estar na mesma pasta do conversor!")
print("> Para conversão MP3 escolha mp3, para WAV escolha wav!")
print()

arquivo = input("Nome do arquivo a ser importado para conversão: ")
saida = input("Nome do arquivo convertido: ")
formato = input("Entre com o formato para conversão: ")

if formato == "mp3":
    sound = AudioSegment.from_file(arquivo).export(saida, format=formato)
elif formato == "wav":
    sound = AudioSegment.from_file(arquivo).export(saida, format=formato)
print()
print("Fim da conversão!")
